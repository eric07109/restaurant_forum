<div class="container">
	<%= render partial: "shared/navbar"%>
	<div class="nav-page">
		<div class="row">
			<% @users.each do |user| %>
			<div class=" col-md-2 user-item">	
				<div><%= image_tag user.avatar, size: "150x150", class: "img-rounded" %></div>
		      	<div id="user-name"><%= user.name %></div>
			  	<div id="follow-user-button"><%= render partial: "shared/follow", locals: {user: user}%></div>
			  	<%= link_to "Friend", friendships_path(friend_id: user), method: :post%>
			  	<%= link_to "Unfriend", friendship_path(id: user), method: :delete%>
			</div>
		  	<% end %>
		</div>
	</div>
</div>



