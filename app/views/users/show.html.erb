<div class="container">
	<div class="row">
		<div class="col-md-6"><%= image_tag @user.avatar, width: '350px'%></div>
		<div class="col-md-6">
			<h2><%= @user.name%></h2>
			<h4><%= @user.email %></h4>
			<p><%= @user.intro%></p>
			<%= link_to('Update', edit_user_path(@user.id)) if @user == current_user%>
		</div>
	</div>
</div>
