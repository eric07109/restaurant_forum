<% if not restaurant.is_favourite?(current_user)%>
	<%= link_to favourite_restaurant_path(restaurant), method: :post, :id => "favourite-heart", :class => "btn btn-outline-secondary" do %>
		<span class="glyphicon glyphicon-heart-empty"></span>
	<%end%>
<%else%>
	<%= link_to unfavourite_restaurant_path(restaurant), method: :post, :id => "favourite-heart", :class => "btn btn-outline-primary" do %>
		<span class="glyphicon glyphicon-heart"></span>
	<%end%>
<%end%>