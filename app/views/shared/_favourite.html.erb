<% if not restaurant.is_favourite?(current_user)%>
	<%= link_to favourite_restaurant_path(restaurant), method: :post, :class => "btn btn-outline-secondary" do %>
		<span class="glyphicon glyphicon-heart-empty" id="favourite-heart"></span>
	<%end%>
<%else%>
	<%= link_to unfavourite_restaurant_path(restaurant), method: :post, :class => "btn btn-outline-primary" do %>
		<span class="glyphicon glyphicon-heart" id="favourite-heart"></span>
	<%end%>
<%end%>