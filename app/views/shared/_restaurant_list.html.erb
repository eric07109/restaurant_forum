<div class="row">
<% @restaurants.each do |restaurant|%>
	<div class="col-sm-6 col-md-4">
		<div class="restaurant-item">
			<%#= image_tag restaurant.image %>
			<!--the image tag below is for testing purpose only. User the restaurant.image when S3 is coorectly configured to Heroku-->
			<%= image_tag "/fake_images/restaurants/00#{rand(0..9)}.jpg" %>
			<div class="caption">
				<h3 id="restaurant-label"><%= link_to restaurant.name, restaurant_path(restaurant)%></h3>
				<p class="label label-default"><%= restaurant.category_name %></p>
				<%= render partial: "shared/favourite.html.erb", locals: {restaurant: restaurant}%>
				<%= render partial: "shared/like.html.erb", locals: {restaurant: restaurant}%>
				<p><%= truncate(restaurant.description, length: 60)%></p>
			</div>
		</div>		
	</div>
<%end%>
	<div class="col-sm-12 text-center">
		<%= paginate @restaurants%>
	</div>
</div>

